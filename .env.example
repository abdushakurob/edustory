# Environment variables
# Copy this file to .env.local and fill in your values

# Database Configuration
# PostgreSQL connection string
# Example: postgresql://user:password@localhost:5432/storymind_dev
DATABASE_URL=""

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-min-32-chars-required-here-1234567890"
SESSION_SECRET="your-session-secret-key-min-32-chars-required-here-1234567890"

# Google Gemini API
# Get your API key from: https://aistudio.google.com/app/apikey
NEXT_PUBLIC_GOOGLE_GENERATIVE_AI_API_KEY=""

# File Upload Configuration
MAX_FILE_SIZE_MB="50"
UPLOAD_DIR="./public/uploads"

# Environment
NODE_ENV="development"
